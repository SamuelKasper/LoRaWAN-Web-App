<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LoRaWAN Web App</title>
    <link rel="stylesheet" href="css/main.css" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

</head>

<body>
    <!--Navbar-->
    <nav class="navbar sticky-top navbar-light justify-content-between">
        <a class="navbar-brand navbar-heading">LoRaWAN Web-App</a>
        <button class="btn btn-primary btn-filter-margin" data-bs-toggle="collapse" data-bs-target="#collapseFilter">Filter</button>
    </nav>

    <!--Filter area-->
    <div class="collapse" id="collapseFilter">
        <div class="card card-body">
            <form action="#" method="post" class="margin-lr-10px">
                <div class="row align-center">
                    <div class="col-2">
                        <input type="radio" id="sensor" name="filter_type" value="sensor">
                        <label for="sensor">Sensor</label>
                    </div>
                    <div class="col-2">
                        <input type="radio" id="zistern" name="filter_type" value="zistern">
                        <label for="zistern">Zisterne</label>
                    </div>
                    <div class="col-2">
                        <input type="radio" id="pump" name="filter_type" value="pump">
                        <label for="pump">Pumpe</label> 
                    </div>
                    <div class="col-2">
                        <input type="radio" id="all" name="filter_type" value="all">
                        <label for="all">Alles</label> 
                    </div>
                    <div class="col-2">
                        <input type="text" id="filter_search" name="filter_search" class="form-control" placeholder="Sensor..." aria-label="Suche" aria-describedby="button-addon2" value="">
                    </div>
                    
                    <div class="col-2 btn-align-right">
                        <%
                        let str = "";
                        entries.forEach(entrie=>{
                            str = str + entrie._id+","+entrie.type+","+entrie.name+"-";
                        });
                        %>
                        <button class="btn btn-primary" type="button" id="button-addon2" onclick="myFilter('<%=str%>')">Suche</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!--Akkordeon-->
    <div class="container-fluid margin-top-20">
    <div class="row">
    <div class="col-1"></div>
    <div class="accordion col-10" id="accordion">
        <!--Item 1-->
        <%entries.forEach(entrie=>{
            let no_spaces_name = entrie.name.replace(" ","_");%>
            <div class="accordion-item" id="<%=entrie._id%>">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="<%=`#${no_spaces_name}`%>" aria-expanded="true"
                        aria-controls="<%`${no_spaces_name}`%>">
                        <%=entrie.name%>
                    </button>
                </h2>
                <div id="<%=no_spaces_name%>" class="accordion-collapse collapse" aria-labelledby="headingOne"
                    data-bs-parent="#accordion">
                    <div class="accordion-body">
                        <form action="/update" method="post">
                        <table>
                            <!--Name-->
                            <tr>
                                <td><strong>Name:</strong></td>
                                <td>
                                    <div class="input-group w150px">
                                        <input name="name" type="text" class="form-control" value="<%=entrie.name%>">
                                    </div>
                                </td>
                            </tr>

                            <!--Zeitstempel-->
                            <tr>
                                <td><strong>Zeitstempel:</strong></td>
                                <td>
                                    <%=entrie.time || "none" %>
                                </td>
                            </tr>

                            <!--Gateway-->
                            <tr>
                                <td><strong>Gateway:</strong></td>
                                <td>
                                    <%=entrie.gateway || "none" %>
                                </td>
                            </tr>

                            <!--Temperatur-->
                            <%if(entrie.temperature){%>
                                <tr>
                                    <td><strong>Temperatur:</strong></td>
                                    <td>
                                        <%=entrie.temperature || "none" %>
                                    </td>
                                </tr>
                            <%}%>

                            <!--Bodenfeuchtigkeit-->
                            <%if(entrie.humidity){%>
                                <tr>
                                    <td><strong>Bodenfeuchtigkeit:</strong></td>
                                    <td>
                                        <%=entrie.humidity || "none" %>
                                    </td>
                                </tr>
                            <%}%>

                            <!--Füllstand-->
                            <%if(entrie.level){%>
                                <tr>
                                    <td><strong>Füllstand:</strong></td>
                                    <td>
                                        <%=entrie.level || "none" %>
                                    </td>
                                </tr>
                            <%}%>

                            <!--Bewässerungsmenge-->
                            <%if(entrie.watering_time && entrie.watering_amount != "none"){%>
                                <tr>
                                    <td><strong>Bewässerungsmenge:</strong></td>
                                    <td>
                                        <div class="input-group w150px">
                                            <input id="watering_amount" name="watering_amount" type="text" class="form-control"
                                                value="<%=entrie.watering_amount%>">
                                            <span class="input-group-text">Liter</span>
                                        </div>
                                    </td>
                                </tr>
                            <%}%>

                            <!--Bewässerungszeit-->
                            <%if(entrie.watering_time && entrie.watering_time != "none"){%>
                                <tr>
                                    <td><strong>Bewässerungszeit:</strong></td>
                                    <td>
                                        <input id="watering_time" name="watering_time" type="time"
                                            class="input-group-text"
                                            value="<%=entrie.watering_time%>">
                                    </td>
                                </tr>
                            <%}%>

                            <!--ID-->   
                            <tr hidden>
                                <td><strong>Database ID</strong></td>
                                <td><input id="dbid" name="dbid" readonly value="<%=entrie._id%>"></td>
                            </tr>

                            <!--Submit Button-->
                            <tr>
                                <td>
                                    <button type="submit" class="btn btn-primary margin-top-20">Änderungen speichern</button>
                                </td>
                            </tr>
                        </table>
                        </form>
                    </div>
                </div>
            </div>
            <%});%>
        </div>
    </div>
    <div class="col-1"></div>
</div>

<script>
function myFilter(entrieString){
    let radioBtn = document.querySelector('input[name="filter_type"]:checked').id;
    let search = document.getElementById("filter_search").value;
    let entries = entrieString.split("-");

    for(let i=0;i<entries.length-1;i++){
        let option = entries[i].split(",");

        if(search!=""){
            if(option[2] == search){
                document.getElementById(option[0]).style = "display: block";
            }else{
                document.getElementById(option[0]).style = "display: none";
            }
        }else{
            if(option[1] == radioBtn){
                document.getElementById(option[0]).style = "display: block";
            }else{
                document.getElementById(option[0]).style = "display: none";
            }
        }
        
        if(radioBtn == "all"){
            document.getElementById(option[0]).style = "display: block";
        }
    }
}
</script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
        crossorigin="anonymous"></script>
</body>

</html>